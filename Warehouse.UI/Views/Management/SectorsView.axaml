<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:avaloniaProgressRing="clr-namespace:AvaloniaProgressRing;assembly=AvaloniaProgressRing"
             xmlns:avalonia="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             xmlns:management="clr-namespace:Warehouse.UI.ViewModels.Management"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Warehouse.UI.Views.Management.SectorsView"
             x:DataType="management:SectorsViewModel">
	<Grid Margin="20" RowDefinitions="*,Auto">
		
		<DataGrid x:Name="ClientsDataGrid" Grid.Row="1" MinHeight="400" ItemsSource="{Binding Sectors}" AutoGenerateColumns="False"
                  VerticalScrollBarVisibility="Auto" CanUserResizeColumns="{Binding !IsInCreateMode}"
                  CanUserReorderColumns="{Binding !IsInCreateMode}" CanUserSortColumns="{Binding !IsInCreateMode}"
                  RowEditEnded="DataGrid_OnRowEditEnded" BeginningEdit="DataGrid_OnBeginningEdit" IsScrollInertiaEnabled="True">
			<DataGrid.Columns>
				<DataGridTextColumn Header="NIP" Binding="{Binding Nip}" Width="*" MinWidth="300"/>
				<DataGridTextColumn Header="Nazwa Firmy" Binding="{Binding Name}" Width="*" MinWidth="300"/>
				<DataGridTemplateColumn Header="" MaxWidth="110" Width="110" MinWidth="110">
					<DataGridTemplateColumn.CellTemplate>
						<DataTemplate>
							<Button Content="UsuÅ„" FontSize="12" Margin="5,10,5,10" Click="RemoveButton_OnClick"
                                    Theme="{StaticResource MaterialOutlineButton}" Classes="primary" />
						</DataTemplate>
					</DataGridTemplateColumn.CellTemplate>
				</DataGridTemplateColumn>
				<DataGridTemplateColumn Header="" MaxWidth="110" Width="110" MinWidth="110">
					<DataGridTemplateColumn.CellTemplate>
						<DataTemplate>
							<Button Content="{avalonia:MaterialIconExt Kind=FileDocument}" FontSize="12" Margin="5,10,5,10" 
                                    Click="ReportButton_Click" Theme="{StaticResource MaterialButton}" Foreground="White" />
						</DataTemplate>
					</DataGridTemplateColumn.CellTemplate>
				</DataGridTemplateColumn>
			</DataGrid.Columns>
		</DataGrid>

		<avaloniaProgressRing:ProgressRing Grid.Row="2"
                               Width="40"
                               Height="40"
                               IsActive="{Binding IsLoading}"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Foreground="Green"
                               Margin="20,20,0,0"/>

	</Grid>
</UserControl>
