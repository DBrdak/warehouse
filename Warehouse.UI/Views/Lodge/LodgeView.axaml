<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:progRing="clr-namespace:AvaloniaProgressRing;assembly=AvaloniaProgressRing"
             xmlns:lodge="clr-namespace:Warehouse.UI.ViewModels.Lodge"
             x:Class="Warehouse.UI.Views.Lodge.LodgeView"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="lodge:LodgeViewModel">

    <Grid Margin="20" RowDefinitions="Auto,Auto,Auto">

        <!-- DataGrid for Drivers -->
        <DataGrid Grid.Row="0" ItemsSource="{Binding Drivers}" AutoGenerateColumns="False" CanUserResizeColumns="True"
                   CanUserReorderColumns="True" CanUserSortColumns="True" LostFocus="InputElement_OnLostFocus" GotFocus="InputElement_OnGotFocus"
                  VerticalScrollBarVisibility="Auto" MaxHeight="900" CellEditEnded="DataGrid_OnCellEditEnded">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Imię" Binding="{Binding FirstName}" Width="*" MinWidth="300"/>
                <DataGridTextColumn Header="Nazwisko" Binding="{Binding LastName}" Width="*" MinWidth="300"/>
                <DataGridTextColumn Header="Numer rejestracyjny" Binding="{Binding VehiclePlate}" Width="*" MinWidth="300"/>
            </DataGrid.Columns>
        </DataGrid>

        <progRing:ProgressRing Grid.Row="1" 
                               Width="40"
                               Height="40"
                               IsActive="{Binding IsLoading}"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Foreground="Green"
                               Margin="20,20,0,0"/>

        <!-- Buttons for Add, Edit, Remove -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button Content="Dodaj" Command="{Binding AddDriverCommand}" Margin="10"/>
            <Button Content="Usuń" Command="{Binding RemoveDriverCommand}" CommandParameter="{Binding SelectedDriver}"
                    IsEnabled="{Binding IsDriverSelected}" Margin="10" />
        </StackPanel>
    </Grid>
</UserControl>